<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_self_Detail"
    android:orientation="vertical"
    android:background="@drawable/testbutton">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="स्वः शिक्षण विवरण "
            android:textSize="50dp"
            android:layout_marginTop="30dp"
            android:textColor="#0F0E0E"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btnbg2"
            android:layout_marginTop="40dp"
            android:textAlignment="center" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/add">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:paddingRight="5dp"
                        android:background="@drawable/btnbg2"
                        android:textAlignment="center"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">
                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/btnbg2"
                        android:textAlignment="center"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="10dp"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:background="#ffff"
                android:gravity="center"
                android:hint="अपनी विषय डाले "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_marginTop="80dp"
                android:background="#ffff"
                android:hint="कक्षा का बैच डाले  "/>
            </RelativeLayout>
        </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:padding="7dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/btnbg2"
                        android:text="सबमिट करे "
                        android:textSize="25sp"
                        />
                </RelativeLayout>

            </LinearLayout>
    

</ScrollView>